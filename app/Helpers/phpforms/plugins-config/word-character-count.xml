<?xml version="1.0" encoding="UTF-8"?>
<root>
	<default>
		<includes>
			<!--
				Path to css and js files into plugins folder.
				If your files are not in plugins folder, use absolute paths.
			-->
			<css>
				<file></file>
			</css>
			<js>
				<file>word-character-count/jquery.word-character-count.js</file>
			</js>
		</includes>
		<js_code>
<![CDATA[
	$("%selector%").wordCharCount({'maxAuthorized': %maxAuthorized%});
]]>
		</js_code>
	</default>
    <word>
        <js_code>
        <![CDATA[
            $("%selector%").wordCharCount({'maxAuthorized': %maxAuthorized%, 'characterCount': false});
        ]]>
                </js_code>
    </word>
    <character>
        <js_code>
        <![CDATA[
            $("%selector%").wordCharCount({'maxAuthorized': %maxAuthorized%, 'wordCount': false});
        ]]>
                </js_code>
    </character>
	<custom>
		<!--
			If you need differents includes for your custom code,
			copy the default '<includes>' structure and put the needed files into '<file>' nodes.
			You can add several files nodes if necessary.
		-->
		<js_code>
			<!-- your custom code here -->
		</js_code>
	</custom>
</root>